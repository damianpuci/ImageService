       input{
           color: lightskyblue;
           background-color: #3c3c3a;
           border-color: #5eb5e0;
       }


        #images {
            background-color: #555555;
            width: auto;
            height: auto;

        }

        #overlay{

            background-color:#555555;
            position:absolute;
            width:100%;
            height:100%;
            top:0px;
            left:0px;
            z-index:1000;
        }

        h1{
            margin-top: 0px;
            color: lightskyblue;
            font-style: italic;
            font-size: 300%;
        }

        h2{
            color: lightskyblue;
            font-style: italic;
            display: inline;
            font-size: 17px;
            font-weight: normal;
        }

        a{
