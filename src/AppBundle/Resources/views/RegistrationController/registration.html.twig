{% block stylesheets %}
    <style>



        #overlay{
            background-color:#555555;
            position:fixed;
            width:100%;
            height:100%;
            top:0px;
            left:0px;
            z-index: -10;
        }

        .top_bar {
            overflow:hidden;
            margin-bottom:0px;
            background-image: url({{ asset('images/background.png') }});
            border-radius: 10px;
        }

        .item {
            float:left;
            height:100px;
            margin:0px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #left_menu {
            width: 10%;
        }

        #title {
            display: flex;
            width: 80%;
            color: lightskyblue;
            justify-content: center;
            align-items: center;
            font-size: 30pt;
            font-family: Verdana;
            font-weight: bold;

        }

        #right_menu {
            width: 10%;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
        }

        .button {
            width: 80%;
            text-align: center;
            margin-top: 0px;
        }




        #username{
            color: lightskyblue;
            background-color: #3c3c3a;
            border-color: #5eb5e0;
        }
        #email
        {
            color: lightskyblue;
