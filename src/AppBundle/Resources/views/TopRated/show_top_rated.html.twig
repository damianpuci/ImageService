{% extends "::base.html.twig" %}

{% block title %}AppBundle:TopRated:ShowTopRated{% endblock %}

{% block body %}


    <div id="overlay">
       {# <div id="menu">
            <div align="center"><h1>ImageService</h1></div>
            {% if last_username %}
                <div align="left">
                    <span id="user" onclick="openNav2()">{{ last_username }}</span><br>

                </div>
            {% endif %}
            <div align="right">
                <a href="{{ path('page') }}">Home</a>
            </div>
        </div>
        #}
        <div class="top_bar">
            <div class="item" id="left_menu">
                {% if last_username %}
                    <a class="button" id="user" onclick="openNav2()">Open user menu</a><br>
                {% endif %}
            </div>

            <div class="item" id="title">- Image Service -</div>

            <div class="item" id="right_menu">
                <a href="{{ path('page') }}">Home</a><br>
                {% if last_username == NULL %}
                    <span id="login" onclick="openNav()">Login</span><br>
                {% endif %}

            </div>

        </div>


        <div id="images">

            {% for image in images %}
                <div align="center" ><a href="{{path('display_image', {'id': image.id}) }}"><img src="{{ asset(image.path) }}" width="500" height="300" /></a></div>
            {% endfor %}
        </div>




            <div id="user_panel" class="sidenav">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav2()">&times;</a>
                <a href="{{ path('user_images', {'last_username': last_username}) }}">Your images</a>
                <a href="{{ path('add_image') }}">Add image</a>
                <a href ="/logout">Logout</a><br>
            </div>






            <script>


                function openNav2() {
                    document.getElementById("user_panel").style.width = "250px";
                }

                function closeNav2() {
                    document.getElementById("user_panel").style.width = "0";
                }
            </script>

        </div>



{% endblock %}


{% block stylesheets %}
    <style>
        #overlay{
            background-color:#555555;
            position:fixed;
            width:100%;
            height:100%;
            top:0px;
            left:0px;
            z-index: -10;
        }

        .top_bar {
            overflow:hidden;
            margin-bottom:0px;
            background-image: url({{ asset('images/background.png') }});
            border-radius: 10px;
        }

        .item {
            float:left;
            height:100px;
            margin:0px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #left_menu {
            width: 10%;
        }

        #title {
            display: flex;
            width: 80%;
            color: lightskyblue;
            justify-content: center;
            align-items: center;
            font-size: 30pt;
            font-family: Verdana;
            font-weight: bold;

        }

        #right_menu {
            width: 10%;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
        }

        .button {
            width: 80%;
            text-align: center;
            margin-top: 0px;
        }

        #login{
            color: lightskyblue;
            font-style: italic;
            margin: 4px;
            border: 1px solid lightskyblue;
            padding: 2px;
            border-radius: 4px;
            background: #3c3c3a;
            line-height: 30px;
            transition: 5s;
            text-decoration: none;
            cursor:pointer;
        }

        #user{
            cursor:pointer;
            color: lightskyblue;
            font-style: italic;
            margin: 4px;
            border: 1px solid lightskyblue;
            border-radius: 4px;
            background: #3c3c3a;
            line-height: 30px;
            transition: 5s;
            text-decoration: none;
            padding: 2px;
        }




        #images {
            background-color: #555555;
            width: auto;
            height: auto;

        }

        h1{
            margin-top: 0px;
            color: lightskyblue;
            font-style: italic;
            font-size: 300%;
        }

        h2{
            color: lightskyblue;
            font-style: italic;
            display: inline;
            font-size: 17px;
            font-weight: normal;
        }

        a{
            color: lightskyblue;
            text-decoration: none;
            font-style: italic;
            display: inline-block;
            width: auto;
            height: auto;
            margin: 4px;
            border: 1px solid lightskyblue;
            border-radius: 4px;
            background: #3c3c3a;
            line-height: 30px;
            transition: 5s;
            padding: 2px;
        }

        a:hover{
            background: rgba(100, 195, 255, 0.41);
        }
        #user:hover{
            background: rgba(100, 195, 255, 0.41);
        }


        #user_panel{
            font-family: Helvetica, SansSerif;
            font-size: 20px;
            color: lightskyblue;
        }

        #user_panel:hover{
            color: #818181;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: rgba(51, 52, 52, 0.96);
            overflow-x: hidden;
            padding-top: 60px;
            transition: 0.5s;
        }

        .sidenav a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 25px;
            color: lightskyblue;
            display: block;
            transition: 0.3s
        }

        .sidenav a:hover, .offcanvas a:focus{
            color: #f1f1f1;
        }

        .sidenav .closebtn {
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 36px;
            margin-left: 50px;
        }


        @media screen and (max-height: 450px) {
            .sidenav {padding-top: 15px;}
            .sidenav a {font-size: 18px;}
        }

    </style>
{% endblock %}
