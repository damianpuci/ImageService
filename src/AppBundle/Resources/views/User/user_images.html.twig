{% extends "::base.html.twig" %}

{% block title %}AppBundle:User:UserImages{% endblock %}

{% block body %}

    <div id="overlay">
    <div id="menu">
        <div align="center"><h1>ImageService</h1></div>
        {% if last_username %}
            <div align="left">
                <span id="user" onclick="openNav2()">{{ last_username }}</span>
            </div>
        {% endif %}
        <div align="right">
            <a href="{{ path('page') }}">Home</a>
        </div>
    </div>
    <div id="images">

        {% for image in images2 %}
            <div align="center" > <img src="{{ asset(image.path) }}" width="500" height="300" /></div>
        {% endfor %}
    </div>

    <div id="references", align="center">
        {%  set pages=((images|length)/10)+1 %}

        {% if pages >= 2 %}
             {% for p in range (1,pages) %}
                 <a href="{{path('user_images', {'number': p}, {'last_username' : last_username}) }}">{{ p }}</a>
             {% endfor %}

        {% else %}
            <a href="{{path('user_images', {'number': 1}, {'last_username' : last_username}) }}">{{ 1 }}</a>

        {% endif %}

        <div id="user_panel" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav2()">&times;</a>
            <a href="{{ path('user_images', {'last_username': last_username}) }}">Your images</a>
            <a href="{{ path('add_image') }}">Add image</a>
        </div>



        <script>


            function openNav2() {
                document.getElementById("user_panel").style.width = "250px";
            }

            function closeNav2() {
                document.getElementById("user_panel").style.width = "0";
            }
        </script>

    </div>

    </div>

{% endblock %}


{% block stylesheets %}
    <style>
        #overlay{

            background-color:#555555;
            position:absolute;
            width:100%;
            height:100%;
            top:0px;
            left:0px;
            z-index: -10;
        }

        #menu{
            background-image: url({{ asset('images/background.png') }});
            color: lightskyblue;
            width: 100%;
            top:0px;
            left:0px;
            position: absolute;
        }

        #user{
            cursor:pointer;
            color: lightskyblue;
            font-style: italic;
            margin: 4px;
            border: 1px solid lightskyblue;
            border-radius: 4px;
            background: #3c3c3a;
            line-height: 30px;
            transition: 5s;
            text-decoration: none;
            padding: 2px;
        }


        #references{
            background-image: url({{ asset('images/background.png') }});
            color: lightskyblue;
            text-decoration: none;
            font-style: italic;
            left: 10px;
            right: 10px;
            bottom: 10px;
            position: fixed;
        }

        #images {
            background-color: #555555;
            width: auto;
            height: auto;
            margin: 250px auto 0;
        }

        h1{
            color: lightskyblue;
            font-style: italic;
            font-size: 300%;
        }

        h2{
            color: lightskyblue;
            font-style: italic;
            display: inline;
            font-size: 17px;
            font-weight: normal;
        }

        a{
            color: lightskyblue;
            text-decoration: none;
            font-style: italic;
            display: inline-block;
            width: auto;
            height: auto;
            margin: 4px;
            border: 1px solid lightskyblue;
            border-radius: 4px;
            background: #3c3c3a;
            line-height: 30px;
            transition: 5s;
            padding: 2px;
        }

        a:hover{
            background: rgba(100, 195, 255, 0.41);
        }
        #user:hover{
            background: rgba(100, 195, 255, 0.41);
        }


        #user_panel{
            font-family: Helvetica, SansSerif;
            font-size: 20px;
            color: lightskyblue;
        }

        #user_panel:hover{
            color: #818181;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: rgba(51, 52, 52, 0.96);
            overflow-x: hidden;
            padding-top: 60px;
            transition: 0.5s;
        }

        .sidenav a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 25px;
            color: lightskyblue;
            display: block;
            transition: 0.3s
        }

        .sidenav a:hover, .offcanvas a:focus{
            color: #f1f1f1;
        }

        .sidenav .closebtn {
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 36px;
            margin-left: 50px;
        }


        @media screen and (max-height: 450px) {
            .sidenav {padding-top: 15px;}
            .sidenav a {font-size: 18px;}
        }

    </style>
{% endblock %}
